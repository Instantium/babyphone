<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="128dp"
        android:layout_height="128dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/baby"
        android:layout_marginTop="32dp"
    />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Baby"
        android:textSize="32sp"
        android:layout_marginTop="32dp"
        />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="01:37"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
    />

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="fitCenter"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/img_mute"
        android:src="@drawable/ic_mic_off"
        app:tint="?attr/colorControlNormal"
        app:layout_constraintTop_toBottomOf="@id/time"
        app:layout_constraintBottom_toTopOf="@id/hang_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img_dialpad"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="fitCenter"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/img_dialpad"
        android:src="@drawable/ic_dialpad"
        app:tint="?attr/colorControlNormal"
        app:layout_constraintTop_toTopOf="@id/img_mute"
        app:layout_constraintStart_toEndOf="@id/img_mute"
        app:layout_constraintEnd_toStartOf="@id/img_speaker"
    />

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:scaleType="fitCenter"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/img_speaker"
        android:src="@drawable/ic_speaker"
        app:tint="?attr/colorControlNormal"
        app:layout_constraintTop_toTopOf="@id/img_mute"
        app:layout_constraintStart_toEndOf="@id/img_dialpad"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/hang_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_call_end"
        app:backgroundTint="@android:color/holo_red_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_mute"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>