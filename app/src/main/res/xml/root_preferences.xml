<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_category_phone">

        <Preference
            app:title="Contacts"
            app:key="contacts"
            app:summary="Add or edit your list of contacts" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_category_display">

        <ListPreference
            app:defaultValue="colours"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:key="theme"
            app:title="@string/settings_theme"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>